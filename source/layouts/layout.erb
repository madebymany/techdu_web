<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "tEchDU" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <header class="app-header">
      <nav class="app-header_nav nav">
        <%= link_to "Home", "/", class: "nav-link" %>
        <%= link_to "Events", "/pages/events", class: "nav-link" %>
        <%= link_to "Gallery", "/pages/gallery", class: "nav-link" %>
      </nav>
    </header>  
    
    <%= yield %>
		
    <footer class="site-footer">
      <div class="grid site-width">
        <div class="col-1-2">
          An event by <a href="http://www.madebymany.com"><img src="images/mxm-logo.png" alt="Made by Many" /></a>
        </div>
        <ul class="inline-list col-1-2 site-footer___links">
          <li class="inline-list__item"><a href="https://twitter.com/TeCH_du">Twitter</a></li>
          <li class="inline-list__item"><a href="http://eepurl.com/QEIiX">Mailing List</a></li>
         </ul>
      </div>
      
      <script>
         (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
         (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
         m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
         })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

         ga('create', 'UA-59363809-1', 'auto');
         ga('send', 'pageview');
      </script>
    </footer>
  </body>
</html>
