<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "tEchDU" %></title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,
                                    initial-scale=1.0,
                                    maximum-scale=1.0,
                                    user-scalable=no,
                                    minimal-ui">
    <%= javascript_include_tag "modernizr" %>
    <%= stylesheet_link_tag "application" %>
  </head>
  
  <body class="<%= page_classes %>" data-module="<%= current_page.data.module || "root" %>" data-action="<%= current_page.data.action || "index" %>">
    <div class="app">
      <header class="app-header">
        <p class="app-header_title">tEchDU</p>
        <nav class="app-header_nav nav">
          <%= link_to "Home", "/", class: "nav-link" %>
          <%= link_to "Events", "/events", class: "nav-link" %>
          <%= link_to "Contact", "/contact", class: "nav-link" %>
        </nav>
      </header>
      <section class="app-content">
        <%= yield %>
      </section>
      <footer class="app-footer">

      </footer>
    </div>
    <%= javascript_include_tag  "build" %>
  </body>
</html>