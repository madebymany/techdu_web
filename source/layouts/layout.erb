<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "tEchDU" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body>
    <%= yield %>
		
    <footer class="site-footer">
    <form class="sign-up__form" action="//madebymany.us3.list-manage.com/subscribe?u=bb6ef8c1b569c34510855551f&id=2c5505341e" method="post">
      <div class="grid site-width">
        An event by <a href="http://www.madebymany.com"><img class="site-footer-logo" src="images/mxm-logo.png" alt="Made by Many" /></a>
        </div>
        <div class="sign-up__form__field">
          <input placeholder="Join our mailing list" name="email" type="text" class="sign-up__form__email">
        </div>
        <div class="sign-up__form__field">
          <button type="submit" class="sign-up__form__submit">Submit</button>
        </div>
      </div>
      </form>
      
      <script>
         (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
         (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
         m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
         })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

         ga('create', 'UA-59363809-1', 'auto');
         ga('send', 'pageview');
      </script>
    </footer>
  </body>
</html>
